# Top-most EditorConfig file
root = true

# C++ source files
[*.cpp]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

# C++ header files
[*.{h,hpp}]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true
